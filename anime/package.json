{
  "name": "anime",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "dev": "npm run start:dev",
    "format": "tslint --fix -p tsconfig.json -c tslint.json",
    "start": "npm run start:prod",
    "start:node": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "npm run build && pm2 startOrReload pm2.config.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "fix": "ts-node -r tsconfig-paths/register src/fix/index.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.4",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.4",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.2.4",
    "crawler": "^1.3.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "mongoose": "^6.1.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.18.5",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.12.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "@types/node": "< 17.0.6"
  },
  "_moduleAliases": {
    "@src": "dist/",
    "@global": "dist/global",
    "@utils": "dist/utils"
  }
}
